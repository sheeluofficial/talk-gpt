{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" },
        "env": {
          "NODE_ENV": "production"
        }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/$1"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ]
  }
  